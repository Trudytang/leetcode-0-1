public class Main {
    public static void main(String[] args) {
        String str = "madam";
        boolean isPalindrome = true;

        for (int i = 0; i < str.length() / 2; i++) {
            if (str.charAt(i) != str.charAt(str.length() - 1 - i)) {//å¦‚æœç¬¬iä¸ªä½ç½®ä¸Šçš„å­—ç¬¦å’Œå®ƒå¯¹ç§°ä½ç½®å­—ç¬¦ä¸åŒ,åˆ™ç­”æ¡ˆæ›´æ”¹ä¸ºfalse.
                isPalindrome = false;
                break;
            }
        }

        System.out.println(str + " æ˜¯å›æ–‡å—ï¼Ÿ" + isPalindrome);
    }
}
